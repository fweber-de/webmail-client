{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-offset-3 col-lg-6">

                <h1>Update Account</h1>

                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="fa fa-at"></i>
                            {{ account.shortName|default(account.emailAddress) }}
                        </h3>
                    </div>
                    <div class="panel-body">

                        <form>
                            <div class="form-group">
                                <label for="input-shortname">Short Name</label>
                                <input type="text" class="form-control" id="input-shortname" value="{{ account.shortName }}" name="shortname">
                            </div>
                            <div class="form-group">
                                <label for="input-email">Email</label>
                                <input type="text" class="form-control" id="input-email" value="{{ account.emailAddress }}" disabled>
                            </div>
                            <div class="form-group">
                                <label for="input-provider">Provider</label>
                                <input type="text" class="form-control" id="input-provider" value="{{ account.provider }}" disabled>
                            </div>

                            <input type="hidden" value="1" name="sent">

                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
